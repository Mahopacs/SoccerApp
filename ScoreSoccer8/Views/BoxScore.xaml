<phone:PhoneApplicationPage
    x:Class="ScoreSoccer8.Views.BoxScore"  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="PortraitOrLandscape" Orientation="Landscape"
    xmlns:converters="clr-namespace:ScoreSoccer8.Converters"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="False"
    toolkit:TiltEffect.IsTiltEnabled="True">

    <phone:PhoneApplicationPage.Resources>
        <converters:NumberToColorConverter x:Key="NumberToColorConverter"/>

        <DataTemplate x:Name="PlayListTemplate">
            <Grid>

                <Border BorderBrush="Gray" BorderThickness="0,0,0,1" HorizontalAlignment="Stretch" />

                <Grid Margin="3,0,3,5" HorizontalAlignment="Stretch" >

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock 
                        HorizontalAlignment="Left"
                        Grid.Column="0"
                        Grid.Row="0"
                        FontSize="18"
                        Foreground="Orange"
                        Text="{Binding Play.TopInfo}" />
                    <TextBlock 
                        HorizontalAlignment="Left"
                        Grid.Column="0"
                        Grid.Row="1"
                        FontSize="20"
                        Foreground="White"
                        TextWrapping="Wrap"
                        Margin="5,0,0,0"
                        Text="{Binding Play.PlayText}" />
                </Grid>

            </Grid>
        </DataTemplate>

        <BitmapImage x:Key="Background" UriSource="/Assets/Fields/SoccerField9.png" CreateOptions="BackgroundCreation"/>
    </phone:PhoneApplicationPage.Resources>
    <Grid>
        
    
    <Grid x:Name="LayoutRoot" Margin="0,0,0,0">

        <!--Height="{Binding ElementName=LayoutRoot, Path=ActualHeight}"-->
        
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <!--Top Spacer-->
            <RowDefinition Height="0*"/>
            <!--Very Top: Boxscore, Time, Overtime-->
            <RowDefinition Height="0*"/>
            <!--Space from time to teams-->
            <RowDefinition Height="15*"/>
            <!--Team Flags, Names and Score-->
            <RowDefinition Height="100*"/>
            <!--Scrolable section with goals, boxscore info and graphs-->
            <RowDefinition Height="3*"/>
            <!--Bottom Spacer-->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <!--Left Spacer-->
            <ColumnDefinition Width="100*"></ColumnDefinition>
            <!--Main Middle Section-->
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <!--Right Spacer-->
        </Grid.ColumnDefinitions>

            <Grid.Background>
                <ImageBrush  Opacity="0.6" Stretch="UniformToFill" ImageSource="{StaticResource Background}"/>
            </Grid.Background>

            <!--<Grid.Background>
                <ImageBrush Opacity="0.6" ImageSource="/Assets/Fields/SoccerField9.png" Stretch="UniformToFill"  />
        </Grid.Background>-->

            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" >
                <Border x:Name="ToSaveAwayPlayerListBox" BorderBrush="White" BorderThickness="1" Width="700">
                    <Grid  Margin="0" Width="700" >

                        <Grid.Background>
                            <ImageBrush Opacity="0.6" ImageSource="/Assets/Fields/SoccerField9.png"/>
                        </Grid.Background>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="0"/>
                                <RowDefinition Height="*"/>
                                <!--App Name-->
                                <RowDefinition Height="*"/>
                                <!--Teams and Score-->
                                <RowDefinition Height="*"/>
                                <!--Date-->
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>

                            <Border Background="DarkBlue" Opacity="0.8" Grid.Row="1" Grid.Column="0" BorderThickness="1" BorderBrush="White" />
                            <TextBlock  HorizontalAlignment="Center" Grid.Row="1" Grid.Column="0" FontSize="30" Foreground="White" FontWeight="Black" Text="uTrackSoccer" />
                            <TextBlock  HorizontalAlignment="Center" Grid.Row="2" Grid.Column="0" FontSize="25" Foreground="Gold" Text="{Binding GameTitle}" />
                            <TextBlock  HorizontalAlignment="Center" Grid.Row="3" Grid.Column="0" FontSize="15" Foreground="Wheat" Text="{Binding GameDate}" />

                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition  Width="*"></ColumnDefinition>
                                <ColumnDefinition  Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0"  HorizontalAlignment="Center" Height="120" Margin="0,0,50,0" Source="{Binding AwayTeamJerseyPath}" Opacity="0.3" />
                            <Image Grid.Column="1"  HorizontalAlignment="Center" Height="120" Margin="50,0,0,0" Source="{Binding HomeTeamJerseyPath}" Opacity="0.3" />

                        </Grid>

                        <Grid Grid.Row="1">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition  Width="*"></ColumnDefinition>
                                <ColumnDefinition  Width="*"></ColumnDefinition>
                                <ColumnDefinition  Width="*"></ColumnDefinition>

                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"  HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,0" FontWeight="Bold" FontSize="25" Opacity="0.5" Text="{Binding AwayTeamName}" >
                                <TextBlock.RenderTransform>
                                    <RotateTransform Angle="-90" CenterX="30" CenterY="0" />
                                </TextBlock.RenderTransform>
                            </TextBlock>

                            <TextBlock Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" FontWeight="Bold" FontSize="25" Opacity="0.5" Text="{Binding HomeTeamName}" >
                                <TextBlock.RenderTransform>
                                    <RotateTransform Angle="90" CenterX="90" CenterY="100"  />
                                </TextBlock.RenderTransform>
                            </TextBlock>


                        </Grid>

                        <Grid Grid.Row="1">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="20*"/>
                                <RowDefinition Height="100*"/>
                                <RowDefinition Height="20*"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="80*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Row="1" Grid.Column="1">

                                <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                                    <StackPanel>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="20*"/>
                                                <RowDefinition Height="20*"/>
                                                <RowDefinition Height="20*"/>
                                                <RowDefinition Height="20*"/>
                                                <RowDefinition Height="20*"/>
                                                <RowDefinition Height="20*"/>
                                                <RowDefinition Height="20*"/>
                                                <RowDefinition Height="20*"/>
                                                <RowDefinition Height="20*"/>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition MinWidth="150" Width="40*"></ColumnDefinition>
                                                <ColumnDefinition MinWidth="130" Width="20*"></ColumnDefinition>
                                                <ColumnDefinition MinWidth="150" Width="40*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" Text="Total Shots"/>
                                            <TextBlock Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Text="Shots On Goal"/>
                                            <TextBlock Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" Text="Fouls"/>
                                            <TextBlock Grid.Column="1" Grid.Row="4" HorizontalAlignment="Center" Text="Corners"/>
                                            <TextBlock Grid.Column="1" Grid.Row="5" HorizontalAlignment="Center" Text="Saves"/>
                                            <TextBlock Grid.Column="1" Grid.Row="6" HorizontalAlignment="Center" Text="Offsides"/>

                                            <Image Grid.Column="1" Grid.Row="7" Width="15" Height="20" HorizontalAlignment="Center" Source="/Assets/yellowCard.png" />
                                            <Image Grid.Column="1" Grid.Row="8" Width="15" Height="20" HorizontalAlignment="Center" Source="/Assets/redCard.png" />

                                            <Grid Grid.Column="0" Grid.Row="0">
                                                <ProgressBar Foreground="Blue" Margin="0,0,40,0" Minimum="0" Maximum="{Binding TotalShots_Max}" Value="{Binding TotalShots_Away}" RenderTransformOrigin="0.5,0.5">
                                                    <ProgressBar.RenderTransform>
                                                        <CompositeTransform Rotation="180.0"/>
                                                    </ProgressBar.RenderTransform>
                                                </ProgressBar>
                                                <TextBlock Text="{Binding TotalShots_Away}" Margin="0,0,10,0" HorizontalAlignment="Right"/>
                                            </Grid>

                                            <Grid Grid.Column="0" Grid.Row="1">
                                                <ProgressBar Foreground="Blue" Margin="0,0,40,0" Minimum="0" Maximum="{Binding ShotsOnGoal_Max}" Value="{Binding ShotsOnGoal_Away}" RenderTransformOrigin="0.5,0.5">
                                                    <ProgressBar.RenderTransform>
                                                        <CompositeTransform Rotation="180.0"/>
                                                    </ProgressBar.RenderTransform>
                                                </ProgressBar>
                                                <TextBlock Text="{Binding ShotsOnGoal_Away}" Margin="0,0,10,0" HorizontalAlignment="Right"/>
                                            </Grid>

                                            <Grid Grid.Column="0" Grid.Row="2">
                                                <ProgressBar Foreground="Blue" Margin="0,0,40,0" Minimum="0" Maximum="{Binding Fouls_Max}" Value="{Binding Fouls_Away}" RenderTransformOrigin="0.5,0.5">
                                                    <ProgressBar.RenderTransform>
                                                        <CompositeTransform Rotation="180.0"/>
                                                    </ProgressBar.RenderTransform>
                                                </ProgressBar>
                                                <TextBlock Text="{Binding Fouls_Away}" Margin="0,0,10,0" HorizontalAlignment="Right"/>
                                            </Grid>

                                            <Grid Grid.Column="0" Grid.Row="4">
                                                <ProgressBar Foreground="Blue" Margin="0,0,40,0" Minimum="0" Maximum="{Binding Corners_Max}" Value="{Binding Corners_Away}" RenderTransformOrigin="0.5,0.5">
                                                    <ProgressBar.RenderTransform>
                                                        <CompositeTransform Rotation="180.0"/>
                                                    </ProgressBar.RenderTransform>
                                                </ProgressBar>
                                                <TextBlock Text="{Binding Corners_Away}" Margin="0,0,10,0" HorizontalAlignment="Right"/>
                                            </Grid>

                                            <Grid Grid.Column="0" Grid.Row="5">
                                                <ProgressBar Foreground="Blue" Margin="0,0,40,0" Minimum="0" Maximum="{Binding Saves_Max}" Value="{Binding Saves_Away}" RenderTransformOrigin="0.5,0.5">
                                                    <ProgressBar.RenderTransform>
                                                        <CompositeTransform Rotation="180.0"/>
                                                    </ProgressBar.RenderTransform>
                                                </ProgressBar>
                                                <TextBlock Text="{Binding Saves_Away}" Margin="0,0,10,0" HorizontalAlignment="Right"/>
                                            </Grid>

                                            <Grid Grid.Column="0" Grid.Row="6">
                                                <ProgressBar Foreground="Blue" Margin="0,0,40,0" Minimum="0" Maximum="{Binding Offsides_Max}" Value="{Binding Offsides_Away}" RenderTransformOrigin="0.5,0.5">
                                                    <ProgressBar.RenderTransform>
                                                        <CompositeTransform Rotation="180.0"/>
                                                    </ProgressBar.RenderTransform>
                                                </ProgressBar>
                                                <TextBlock Text="{Binding Offsides_Away}" Margin="0,0,10,0" HorizontalAlignment="Right"/>
                                            </Grid>

                                            <Grid Grid.Column="0" Grid.Row="7">
                                                <ProgressBar Foreground="Blue" Margin="0,0,40,0" Minimum="0" Maximum="{Binding YellowCards_Max}" Value="{Binding YellowCard_Away}" RenderTransformOrigin="0.5,0.5">
                                                    <ProgressBar.RenderTransform>
                                                        <CompositeTransform Rotation="180.0"/>
                                                    </ProgressBar.RenderTransform>
                                                </ProgressBar>
                                                <TextBlock Text="{Binding YellowCard_Away}" Margin="0,0,10,0" HorizontalAlignment="Right"/>
                                            </Grid>

                                            <Grid Grid.Column="0" Grid.Row="8">
                                                <ProgressBar Foreground="Blue" Margin="0,0,40,0" Minimum="0" Maximum="{Binding RedCards_Max}" Value="{Binding RedCard_Away}" RenderTransformOrigin="0.5,0.5">
                                                    <ProgressBar.RenderTransform>
                                                        <CompositeTransform Rotation="180.0"/>
                                                    </ProgressBar.RenderTransform>
                                                </ProgressBar>
                                                <TextBlock Text="{Binding RedCard_Away}" Margin="0,0,10,0" HorizontalAlignment="Right"/>
                                            </Grid>






                                            <Grid Grid.Column="2" Grid.Row="0">
                                                <ProgressBar Foreground="Red" Margin="40,0,0,0" Minimum="0" Maximum="{Binding TotalShots_Max}" Value="{Binding TotalShots_Home}" >
                                                </ProgressBar>
                                                <TextBlock Text="{Binding TotalShots_Home}"  Margin="10,0,0,0" HorizontalAlignment="Left" />
                                            </Grid>

                                            <Grid Grid.Column="2" Grid.Row="1">
                                                <ProgressBar Foreground="Red" Margin="40,0,0,0" Minimum="0" Maximum="{Binding ShotsOnGoal_Max}" Value="{Binding ShotsOnGoal_Home}" >
                                                </ProgressBar>
                                                <TextBlock Text="{Binding ShotsOnGoal_Home}" Margin="10,0,0,0" HorizontalAlignment="Left" />
                                            </Grid>

                                            <Grid Grid.Column="2" Grid.Row="2">
                                                <ProgressBar Foreground="Red" Margin="40,0,0,0" Minimum="0" Maximum="{Binding Fouls_Max}" Value="{Binding Fouls_Home}" >
                                                </ProgressBar>
                                                <TextBlock Text="{Binding Fouls_Home}" Margin="10,0,0,0" HorizontalAlignment="Left" />
                                            </Grid>

                                            <Grid Grid.Column="2" Grid.Row="4">
                                                <ProgressBar Foreground="Red" Margin="40,0,0,0" Minimum="0" Maximum="{Binding Corners_Max}" Value="{Binding Corners_Home}" >
                                                </ProgressBar>
                                                <TextBlock Text="{Binding Corners_Home}" Margin="10,0,0,0" HorizontalAlignment="Left" />
                                            </Grid>

                                            <Grid Grid.Column="2" Grid.Row="5">
                                                <ProgressBar Foreground="Red" Margin="40,0,0,0" Minimum="0" Maximum="{Binding Saves_Max}" Value="{Binding Saves_Home}" >
                                                </ProgressBar>
                                                <TextBlock Text="{Binding Saves_Home}" Margin="10,0,0,0" HorizontalAlignment="Left" />
                                            </Grid>

                                            <Grid Grid.Column="2" Grid.Row="6">
                                                <ProgressBar Foreground="Red" Margin="40,0,0,0" Minimum="0" Maximum="{Binding Offsides_Max}" Value="{Binding Offsides_Home}" >
                                                </ProgressBar>
                                                <TextBlock Text="{Binding Offsides_Home}" Margin="10,0,0,0" HorizontalAlignment="Left" />
                                            </Grid>

                                            <Grid Grid.Column="2" Grid.Row="7">
                                                <ProgressBar Foreground="Red" Margin="40,0,0,0" Minimum="0" Maximum="{Binding YellowCards_Max}" Value="{Binding YellowCard_Home}" >
                                                </ProgressBar>
                                                <TextBlock Text="{Binding YellowCard_Home}" Margin="10,0,0,0" HorizontalAlignment="Left" />
                                            </Grid>

                                            <Grid Grid.Column="2" Grid.Row="8">
                                                <ProgressBar Foreground="Red" Margin="40,0,0,0" Minimum="0" Maximum="{Binding RedCards_Max}" Value="{Binding RedCard_Home}" >
                                                </ProgressBar>
                                                <TextBlock Text="{Binding RedCard_Home}" Margin="10,0,0,0" HorizontalAlignment="Left" />
                                            </Grid>

                                        </Grid>
                                    </StackPanel>
                                </ScrollViewer>

                            </Grid>

                        </Grid>

                        <!--<TextBlock Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,40,20" FontWeight="ExtraBlack" FontSize="35" Opacity="0.5" Text="uTrackSports.com" >
                        <TextBlock.RenderTransform>
                            <RotateTransform Angle="-45" />
                        </TextBlock.RenderTransform>
                    </TextBlock>-->

                        <!--<Border Grid.Row="1" Grid.RowSpan="2" Height="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,0" >
                        <Border  BorderBrush="White" BorderThickness="2">
                            <Image  Source="/Assets/QR/QR1.png" Opacity="1" />
                        </Border>
                    </Border>-->

                        <!--<Border Grid.Row="1" Grid.RowSpan="2" Height="100" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,0" >
                        <Border  BorderBrush="White" BorderThickness="0">
                            <Image  Source="/Assets/QR/QR3.png" Opacity="1" />
                        </Border>
                    </Border>-->

                        <Border Grid.Row="3" >
                            <Border Background="DarkBlue"  BorderBrush="White" BorderThickness="1">
                                <TextBlock  HorizontalAlignment="Center" FontSize="16" Foreground="White" FontWeight="SemiBold" Text="All Rights Reserved. www.uTrackSports.com" />
                            </Border>
                        </Border>


                    </Grid>
                </Border>
            </ScrollViewer>

            <Border Background="Black"></Border>


        
        
        
        
        
        
        
        
        
        
        
        
        
        
        



            <!--Very Top: Boxscore, Time, Overtime-->
        <!--<Grid Grid.Column="1" Grid.Row="1" Margin="0,0,0,0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40*"></ColumnDefinition>
                <ColumnDefinition Width="100*"></ColumnDefinition>
                <ColumnDefinition Width="25*"></ColumnDefinition>
                <ColumnDefinition Width="15*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Grid.Row="0" BorderBrush="White" BorderThickness="3,3,3,3" CornerRadius="0,40,0,40" Background="Black"/>

            <Border Grid.Column="2" Grid.Row="0" BorderBrush="White" BorderThickness="0,0,0,3" CornerRadius="40,0,0,0" Background="Black"/>
            <Border Grid.Column="2" Grid.Row="0" BorderBrush="White" BorderThickness="3,3,3,3" CornerRadius="40,0,40,0" Background="Silver"/>
            <Border Grid.Column="3" Grid.Row="0" BorderBrush="White" BorderThickness="0,3,3,3" CornerRadius="0,0,40,0" Background="Black"/>

                <TextBlock Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Text="{Binding Game.GameMinutes}" Foreground="Black" />
                <TextBlock Grid.Column="3" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold" Text="{Binding Game.GameMinutes}" Foreground="White" />

            <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Statistics" Foreground="White" />
        </Grid>-->



            <Grid  Grid.Column="1" Grid.Row="3" Margin="0,0,0,0" >

                <Grid.RowDefinitions>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="40*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"></ColumnDefinition>
                    <ColumnDefinition Width="15*"></ColumnDefinition>
                    <ColumnDefinition Width="100*"></ColumnDefinition>
                    <ColumnDefinition Width="15*"></ColumnDefinition>
                    <ColumnDefinition Width="10*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
            </Grid>

            <!--Scond From The Top: Team Flags, Names and Score-->
        <Grid x:Name="TeamScore" Grid.Column="1" Grid.Row="3" Margin="0,0,0,0" >

            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="40*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"></ColumnDefinition>
                <ColumnDefinition Width="15*"></ColumnDefinition>
                <ColumnDefinition Width="100*"></ColumnDefinition>
                <ColumnDefinition Width="15*"></ColumnDefinition>
                <ColumnDefinition Width="10*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--Left Corner-->
            <Border Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" BorderBrush="White" BorderThickness="3,3,0,3" CornerRadius="10,0,0,100" Background="Black"/>

            <!--Left Team Flag Borders-->
            <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" BorderBrush="White" BorderThickness="0,3,0,3" CornerRadius="0,0,0,0" Background="Black"/>
            <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" BorderBrush="White" BorderThickness="3,3,3,3" CornerRadius="15,0,15,0" Background="Black"/>

            <!--Left Team Flag Image curved to borders-->
                <Grid Grid.Column="1" Grid.Row="0"  Grid.RowSpan="2">
                
                    <Border CornerRadius="15,0,15,0" BorderThickness="3,3,3,3" >
                        <Border.Background>
                            <ImageBrush Stretch="UniformToFill">
                                <ImageBrush.ImageSource>
                                    <BitmapImage UriSource="{Binding AwayTeamJerseyPath}">
                                    </BitmapImage>
                                </ImageBrush.ImageSource>
                            </ImageBrush>
                        </Border.Background>
                    </Border>

                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Text="{Binding AwayTeamShortName}" ></TextBlock>
                </Grid>


            <!--Center-->
            <Border Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" BorderBrush="White" BorderThickness="0,3,0,3" CornerRadius="0,0,0,0" Background="Black"/>
            <TextBlock Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="White" Text="{Binding GameTitle}" />

            <!--Right Team Flag-->
            <Border Grid.Column="3" Grid.Row="1" Grid.RowSpan="2" BorderBrush="White" BorderThickness="0,3,0,3" CornerRadius="0,0,0,0" Background="Black"/>
            <Border Grid.Column="3" Grid.Row="0" Grid.RowSpan="2" BorderBrush="White" BorderThickness="3,3,3,3" CornerRadius="0,15,0,15" Background="Black"/>

            <!--Right Team Flag Image curved to borders-->
                <Grid Grid.Column="3" Grid.Row="0" Grid.RowSpan="2" >

                    <Border  CornerRadius="0,15,0,15" BorderThickness="3,3,3,3">
                        <Border.Background>
                            <ImageBrush Stretch="UniformToFill">
                                <ImageBrush.ImageSource>
                                    <BitmapImage UriSource="{Binding HomeTeamJerseyPath}">
                                    </BitmapImage>
                                </ImageBrush.ImageSource>
                            </ImageBrush>
                        </Border.Background>
                    </Border>

                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Text="{Binding HomeTeamShortName}" ></TextBlock>
                </Grid>


            <!--Right Corner-->
            <Border Grid.Column="4" Grid.Row="1" Grid.RowSpan="2" BorderBrush="White" BorderThickness="0,3,3,3" CornerRadius="0,10,100,0" Background="Black" />

        </Grid>

        <!--<TextBlock Grid.Column="1" Grid.Row="4" Text="abc" />-->

        <Grid Grid.Column="1" Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="100*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"></ColumnDefinition>
                <ColumnDefinition Width="25*"></ColumnDefinition>
                <ColumnDefinition Width="75*"></ColumnDefinition>
                <ColumnDefinition Width="25*"></ColumnDefinition>
                <ColumnDefinition Width="5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Source="{Binding AwayTeamJerseyPath}" Opacity="0.3" />
            <Image Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center" Source="{Binding HomeTeamJerseyPath}" Opacity="0.3" />

        </Grid>

        <phone:Pivot Grid.Column="1" Grid.Row="4" Margin="0,0,0,0"  HorizontalAlignment="Stretch" >

            <phone:PivotItem  HorizontalAlignment="Center" >

                <phone:PivotItem.Header>
                    <Grid>
                        <TextBlock FontSize="30" Text="Timeline" />
                    </Grid>
                </phone:PivotItem.Header>

                    <Grid x:Name="TimeLineGrid" >
                        <ListBox ItemsSource="{Binding TimelineList}" >
                            <ListBox.ItemTemplate>
                                <DataTemplate>

                                    <Border 
                                Margin="0,0,0,0" 
                                BorderThickness="0,0,0,0"
                                BorderBrush="LightGray"
                                >

                                        <Grid HorizontalAlignment="Center">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="20*"/>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition MinWidth="160" Width="100*"></ColumnDefinition>
                                                <ColumnDefinition MinWidth="30" Width="15*"></ColumnDefinition>
                                                <ColumnDefinition MinWidth="70" Width="70"></ColumnDefinition>
                                                <ColumnDefinition MinWidth="30" Width="15*"></ColumnDefinition>
                                                <ColumnDefinition MinWidth="160" Width="100*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0" HorizontalAlignment="Right">

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="100*"/>
                                                    <RowDefinition Height="100*"/>
                                                </Grid.RowDefinitions>

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100*"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Margin="0,0,5,0" Grid.Row="0" Grid.RowSpan="{Binding RowSpam}" VerticalAlignment="Center" Text="{Binding AwayPlayerName}" />
                                                <TextBlock Margin="0,0,5,0" Grid.Row="1" Text="{Binding AwayPlayerSecondName}" FontSize="{Binding FontSize}" />

                                            </Grid>

