        <!--Field-->
        <Viewbox Stretch="Fill" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*"/>
                    <ColumnDefinition Width=".5*"/>
                </Grid.ColumnDefinitions>

                
                
                <!--Visitor Team-->
                <Grid Margin="0,30,0,0" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".25*" MinWidth="{Binding MinWidthOfOneListBox}"/>
                        <ColumnDefinition Width=".25*" MinWidth="{Binding MinWidthOfOneListBox}"/>
                        <ColumnDefinition Width=".25*" MinWidth="{Binding MinWidthOfOneListBox}"/>
                        <ColumnDefinition Width=".25*" MinWidth="{Binding MinWidthOfOneListBox}"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".33*"/>
                        <RowDefinition Height=".34*"/>
                        <RowDefinition Height=".33*"/>
                    </Grid.RowDefinitions>
                    
                    
                    <ListBox HorizontalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.Row="0"  Grid.Column="0" VerticalAlignment="Center" ItemsSource="{Binding LeftUnknownPlayer}" ItemTemplate="{StaticResource Player}">

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel VerticalAlignment="Center">
                                    <StackPanel.Resources>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        </Style>
                                    </StackPanel.Resources>
                                </StackPanel>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="1"/>
                            </Style>
                        </ListBox.ItemContainerStyle>

                    </ListBox>

                    <ListBox HorizontalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" ItemsSource="{Binding LeftGoalie}" ItemTemplate="{StaticResource Player}">

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel VerticalAlignment="Center">
                                    <StackPanel.Resources>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        </Style>
                                    </StackPanel.Resources>
                                </StackPanel>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="1"/>
                            </Style>
                        </ListBox.ItemContainerStyle>

                    </ListBox>

                    <ListBox HorizontalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" ItemsSource="{Binding LeftSpaceHolder}" ItemTemplate="{StaticResource Player}">

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel VerticalAlignment="Center">
                                    <StackPanel.Resources>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        </Style>
                                    </StackPanel.Resources>
                                </StackPanel>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="1"/>
                            </Style>
                        </ListBox.ItemContainerStyle>

                    </ListBox>

                    <ListBox HorizontalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.Row="0" Grid.RowSpan="3"  Grid.Column="1" ItemsSource="{Binding LeftCol3}" ItemTemplate="{StaticResource Player}">

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel VerticalAlignment="Center">
